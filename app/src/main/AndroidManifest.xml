<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.baatoandroiddemo">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.baato.baatoandroiddemo.activities.RetroMapStyleActivity" />
        <activity android:name="com.baato.baatoandroiddemo.activities.BreezeMapStyleActivity" />
        <activity android:name="com.baato.baatoandroiddemo.activities.MonochromeMapStyleActivity" />
        <activity android:name="com.baato.baatoandroiddemo.activities.LocationPickerActivity" />
        <activity android:name="com.baato.baatoandroiddemo.activities.SearchActivity" />
        <activity android:name="com.baato.baatoandroiddemo.activities.MockNavigationActivity" />
        <activity
            android:name="com.baato.baatoandroiddemo.activities.MockNavigationHelperActivity"
            android:screenOrientation="portrait" />
        <activity android:name="com.baato.baatoandroiddemo.activities.ComponentNavigationActivity" />
        <activity
            android:name="com.baato.baatoandroiddemo.activities.ComponentNavigationHelperActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.baato.baatoandroiddemo.activities.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>